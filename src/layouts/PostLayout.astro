---
// take the frontmatter from the prop - Note - it is frontmatter, not camel case frontMatter.

import BaseLayout from "./BaseLayout.astro";
const {frontmatter} = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    <p>Written by <b>{frontmatter.author}</b>. Published on: {frontmatter.pubDate.toString().slice(0, 10)}</p>
    <p>{frontmatter.tags.map((tag: string) => `#${tag}  `)}</p>
    <p><em>{frontmatter.description}</em></p>
    <img src=`${frontmatter.image.url}` alt={frontmatter.image.alt}/>

    <slot/>
</BaseLayout>